<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"

    android:background="#d6e1e2"
    android:orientation="horizontal"
    android:layout_marginBottom="1dp">

    <ImageView
        android:id="@+id/incident_type"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@mipmap/assault"
        android:layout_margin="16dp"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/firstTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Assault"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <TextView
            android:id="@+id/firstInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="pending Dispatch"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <TextView
            android:id="@+id/firstLoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="200 m"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/severity_level"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@mipmap/severity_icon"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@mipmap/right_arrow"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

</LinearLayout>
